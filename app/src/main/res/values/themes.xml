<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AyuvyaAssignment" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <style name="Theme.AyuvyaAssignment" parent="Base.Theme.AyuvyaAssignment" />


    <style name="primaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:background">@drawable/rounded_primary_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="numbersPicker" parent="Theme.AppCompat">
        <item name="colorControlNormal">#cad3dc</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="displayLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="headlineLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="headlineMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bodyLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bodyMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
    </style>

    <style name="bodySmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
    </style>

    <style name="labelLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="labelMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

</resources>